      }

      part {
         name: "module_screen_block";
         clip_to: "clipper";
         type: TEXT;
         description {
            state, "default" 0.0;
            visible: 1;
            rel1 { relative: 0.0  0.0; offset: 10 4; to:"module_screen_block_field";}
            rel2 { relative: 0.0  0.0; offset: 400 30; to:"module_screen_block_field";}
            color: 231 231 231 200;
            text { text: "Activer la demande du mot de passe lors de la sortie de veille : "; font:ROOM_ELEMENT_FONT; size: 12; min: 0 0; align: 0.0 0.5;}
         }
      }

      ELEMENT_ACTION_BUTTON_CHECKBOX("module_screen_block_btn", "module_screen_block_field","module_screen_block_field", "button_action_select_unselected.png","button_action_select_selected.png", "button_action_scenario_play_glow.png",  "object", "screen,block,uncheck", "screen,block,check", "calaos","screen,block,uncheck","screen,block,check",0.0, 0.0, 524-5, 7, 0.0,0.0,549-5, 27);



      //////// end ask password field



      /*** fin corps du module */

      part {
         name: "module_controls_deco";
         clip_to: "clipper";
         description {
            state: "default" 0.0;
            visible: 1;
            image { normal: "controls_bg.png"; }
            rel1 { relative: 1.0  0.5; offset: -327 -238; }
            rel2 { relative: 1.0  0.5; offset:  -20  238; }
         }
      }


      part {
         name: "module_controls_sizer";
         clip_to: "clipper";
         type: RECT;
         description {
            state: "default" 0.0;
            rel1.to: "module_controls_deco";
            rel2.to: "module_controls_deco";
